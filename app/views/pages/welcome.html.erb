<div class="container">
	<div class="row clearfix">
		<div class="col-md-12">
			<h1 class="text-center">
				Developers â™¥ to help
			</h1>
			<br />
			<div class="row clearfix">
				<div class="col-md-1">
				</div>
				<div class="col-md-10">
					<p>	We connect developers and designers with projects they love.  Whether you're a nonprofit who encourages kids
						to stay in school, or a soup kitchen serving the underpriveledged, we can help connect your mission with
						talented individuals who want to help.  In exchange for the work that the developer provides, you agree to
						provide a review of the work they've done.
						<br />
						<br />
						<!-- <h3 class="text-center">Ready to get started?</h3> -->
						<br />
						
					</p>
				</div>
				<div class="col-md-1">
				</div>
			</div>
			<div class="row clearfix">
				<div class="col-md-2">
				</div>
				<div class="col-md-3">
					 <button type="button" id="developer_button"class="btn btn-lg btn-block">I'm a Developer</button>
				</div>
				<div class="col-md-2">
				</div>
				<div class="col-md-3">
					 <button type="button" id="nonprofit_button" class="btn btn-lg btn-block">We're a Nonprofit</button>
				</div>
				<div class="col-md-2">
				</div>
			</div>
			<div class="row clearfix">
				<div class="col-md-2">
				</div>
				<div class="col-md-3 welcome_page_form">
					<span id="developer_form" style="display:none;">

						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div><%= f.label :name %><br />
						  <%= f.text_field :name %></div>

						  <div><%= f.label :email %><br />
						  <%= f.email_field :email %></div>

						  <div><%= f.label :password %><br />
						  <%= f.password_field :password %></div>

						  <div><%= f.label :password_confirmation %><br />
						  <%= f.password_field :password_confirmation %></div>
						  <%= f.hidden_field :role, value: "developer" %>

						  <div><%= f.submit "Sign up" %></div>
						<% end %>
					</span>
				</div>
				<div class="col-md-2">
				</div>
				<div class="col-md-3 welcome_page_form">
					<span id="nonprofit_form" style="display:none;">
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div><%= f.label :name %><br />
						  <%= f.text_field :name %></div>

						  <div><%= f.label :email %><br />
						  <%= f.email_field :email %></div>

						  <div><%= f.label :password %><br />
						  <%= f.password_field :password %></div>

						  <div><%= f.label :password_confirmation %><br />
						  <%= f.password_field :password_confirmation %></div>
						  <%= f.hidden_field :role, value: "nonprofit" %>

						  <div><%= f.submit "Sign up" %></div>
						<% end %>
					</span>
				</div>
				<div class="col-md-2">
				</div>
			</div>
		</div>
	</div>
</div>