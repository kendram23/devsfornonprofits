<script src="//code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>


<script>
$(document).on("ready", function(){

	$("#developer_button").on("click", function(){
 		$("#developer_form").toggle("fast")
 	});

 	$("#nonprofit_button").on("click", function(){
 		$("#nonprofit_form").toggle("fast")
 	});
 });
</script>

<style>

#heart {
	color: #A3456A;
}

html { 
	background-image: url('http://upload.wikimedia.org/wikipedia/commons/thumb/d/d7/Makati_Skyline_view_from_EcoPlaza_Bldg.jpg/1280px-Makati_Skyline_view_from_EcoPlaza_Bldg.jpg'); 
	background-repeat: no-repeat;
 	center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.btn-custom {
  background-color: hsl(156, 65%, 40%) ;
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#23a873", endColorstr="#23a873");
  background-image: -khtml-gradient(linear, left top, left bottom, from(#23a873), to(#23a873));
  background-image: -moz-linear-gradient(top, #23a873, #23a873);
  background-image: -ms-linear-gradient(top, #23a873, #23a873);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #23a873), color-stop(100%, #23a873));
  background-image: -webkit-linear-gradient(top, #23a873, #23a873);
  background-image: -o-linear-gradient(top, #23a873, #23a873);
  background-image: linear-gradient(#23a873, #23a873);
  border-color: #23a873 #23a873 hsl(156, 65%, 40%);
  color: #fff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.00);
  -webkit-font-smoothing: antialiased;
}

h1 {
	color: darkslategrey;

}

p {
	color: darkslategrey;
	font-family: arial;
	font-size: 1.7em;
}


</style>



<div class="container">
	<div class="row clearfix">
		<div class="col-md-12">
			<h1 class="text-center">
				Developers <span id="heart">â™¥</span> to Help
			</h1>
			<br />
			<div class="row clearfix">
				<div class="col-md-1">
				</div>
				<div class="col-md-10">
					<p>	We connect developers and designers with projects they love.  Whether you're a nonprofit who encourages kids
						to stay in school, or a soup kitchen serving the underpriveledged, we can help connect your mission with
						talented individuals who want to help.  In exchange for the work that the developer provides, you agree to
						provide a review of the work they've done.
						<br />
						<br />
						<!-- <h3 class="text-center">Ready to get started?</h3> -->
						<br />
						<br />
						
					</p>
				</div>
				<div class="col-md-1">
				</div>
			</div>
			<div class="row clearfix">
				<div class="col-md-2">
				</div>
				<div class="col-md-3">
					 <button type="button" id="developer_button"class="btn-custom btn-lg btn-block">I'm a Developer</button>
				</div>
				<div class="col-md-2">
				</div>
				<div class="col-md-3">
					 <button type="button" id="nonprofit_button" class="btn-custom btn-lg btn-block">We're a Nonprofit</button>
				</div>
				<div class="col-md-2">
				</div>
			</div>
			<div class="row clearfix">
				<div class="col-md-2">
				</div>
				<div class="col-md-3 welcome_page_form">
					<span id="developer_form" style="display:none;">

						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div><%= f.label :name %><br />
						  <%= f.text_field :name %></div>

						  <div><%= f.label :email %><br />
						  <%= f.email_field :email %></div>

						  <div><%= f.label :password %><br />
						  <%= f.password_field :password %></div>

						  <div><%= f.label :password_confirmation %><br />
						  <%= f.password_field :password_confirmation %></div>
						  <%= f.hidden_field :role, value: "developer" %>

						  <div><%= f.submit "Sign up" %></div>
						<% end %>
					</span>
				</div>
				<div class="col-md-2">
				</div>
				<div class="col-md-3 welcome_page_form">
					<span id="nonprofit_form" style="display:none;">
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
						  <%= devise_error_messages! %>

						  <div><%= f.label :name %><br />
						  <%= f.text_field :name %></div>

						  <div><%= f.label :email %><br />
						  <%= f.email_field :email %></div>

						  <div><%= f.label :password %><br />
						  <%= f.password_field :password %></div>

						  <div><%= f.label :password_confirmation %><br />
						  <%= f.password_field :password_confirmation %></div>
						  <%= f.hidden_field :role, value: "nonprofit" %>

						  <div><%= f.submit "Sign up" %></div>
						<% end %>
					</span>
				</div>
				<div class="col-md-2">
				</div>
			</div>
		</div>
	</div>
</div>