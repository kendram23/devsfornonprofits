<%= form_for @user do |f| %> 

  <div><%= f.label 'Company Name' %><br />
       <%= f.text_field :company_name, size: '30x1' %></div>

  <div><%= f.label 'Github' %><br />
       <%= f.text_field :github_profile, size: "30x1" %></div>

  <div><%= f.label 'Linkedin' %><br />
       <%= f.text_field :linkedin_profile, size: "30x1" %></div>

  <div><%= f.label 'Twitter' %><br />
       <%= f.text_field :twitter_profile, size: "30x1" %></div>

  <div><%= f.label 'Logo URL' %><br />
       <%= f.text_field :picture_url, size: "30x1" %></div>

  <div><%= f.label 'About' %><br />
       <%= f.text_area :about, size: "60x6" %></div>

  <div><%= f.label 'City' %><br />
       <%= f.text_field :city, size: "30x1" %></div>

  <div><%= f.label 'State' %><br />
       <%= f.text_field :state, size: "30x1" %></div>

  <div><%= f.label 'Zipcode' %><br />
       <%= f.text_field :zipcode, size: "30x1" %></div>

  <div><%= f.label 'Phone' %><br />
       <%= f.text_field :phone, size: "30x1" %></div>

  <div>
    <%= f.submit "Submit" %></div>
<% end %>