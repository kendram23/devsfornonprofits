<%= form_for current_user do |f| %> 

  <div><%= f.label 'Project Title' %><br />
       <%= f.text_field :title, size: '40x1' %></div>

  <div><%= f.label 'Describe the project' %><br />
       <%= f.text_area :description, size: "60x4" %></div>

  <div><%= f.label 'Project Requirement' %><br />
       <%= f.text_area :requirements, size: "60x4" %></div>

  <div><%= f.label 'Project Category' %><br />
  	   <%= f.select :category, options_for_select('Website', 'Mobile App') %></div>

	<div><%= f.label 'Project Deadline' %><br />
       <%= f.date_field :project_deadline %></div>

       <%= f.hidden_field :user_id, :value => current_user.id %>
  <div>
    <%= f.submit "Submit" %></div>
<% end %>