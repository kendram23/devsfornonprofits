<h1>Current Available Projects</h1>

<% if current_user.role == 'nonprofit' %>
	<%= link_to 'Create New Project', new_project_path %>
<% end %>

	<% @projects.each do |project| %>
	<div>
	<%= link_to project.title, project_path(project[:id]) %>
	<%= project.description %>
	<%= project.category %>
	</div>
	<% end %>

	<%= will_paginate @projects %>




