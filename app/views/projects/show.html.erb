<% if user_signed_in? %>
<h1><%= @project.title %></h1>
<h2>Posted By: <%= link_to current_user.company_name, "#" %></h2>
<p><%= @project.description %></p>
<p><%= @project.requirements %></p>
<p><%= @project.project_deadline %></p>
<p><%= @project.category %></p>

<p>

<% if current_user.role == 'nonprofit' && @project.user_id == current_user.id %>
	<%= link_to "Edit Project", edit_project_path(@project) %>
<% end %>
<% if current_user.role == 'nonprofit' && @project.user_id == current_user.id %>
	<%= link_to "Delete Project", @project, :method => :delete, :confirm => "Are you sure you want to delete this project? This action can not be undone." %>
<% end %>

<% if current_user.role == 'developer' %>
	<%= link_to "Apply for this Project" , '#' %>
	<% end %>
<%= link_to "Back to Projects", projects_path %>
<p>
<% else %>
	redirect_to root
<% end %>

